<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="60.0" layoutY="56.0" text="Calculate Sum">
         <font>
            <Font name="Bookman Old Style" size="14.0" />
         </font></Label>
      <TextField fx:id="txtNumber1" layoutX="60.0" layoutY="100.0" promptText="First number:">
         <font>
            <Font name="Bookman Old Style" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="txtNumber2" layoutX="60.0" layoutY="150.0" promptText="Second number:">
         <font>
            <Font name="Bookman Old Style" size="12.0" />
         </font>
      </TextField>
      <Button fx:id="btSum" layoutX="60.0" layoutY="200.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum">
         <font>
            <Font name="Bookman Old Style" size="12.0" />
         </font>
      </Button>
      <Label layoutX="60.0" layoutY="246.0" text="Result:">
         <font>
            <Font name="Bookman Old Style" size="12.0" />
         </font>
      </Label>
      <Label fx:id="labelResult" layoutX="115.0" layoutY="246.0">
         <font>
            <Font name="Bookman Old Style" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
